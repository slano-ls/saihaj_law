<p id="menu-clock">
    {
        new Date().toLocaleString("en-US", {
            hour: "numeric",
            minute: "numeric",
            timeZone: "America/Toronto",
        })
    }
</p>

<script>
    const clock = document.getElementById("menu-clock") as HTMLDivElement;

    let date = new Date();

    function refreshClock() {
        date = new Date();
        clock.innerText = date.toLocaleString("en-US", {
            hour: "numeric",
            minute: "numeric",
            timeZone: "America/Toronto",
        });
    }

    setInterval(refreshClock, 1000);
</script>
