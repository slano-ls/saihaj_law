---
import { Image } from "astro:assets";
import Layout from "@/layouts/Layout.astro";

// Using the visage image for consistency as requested
import placeholderImage from "@/assets/visage.webp";
---

<Layout
    title="My First Sample Post â€” Saihaj Law"
    description="This is a sample blog post."
>
    <article
        class="container flex max-w-xl flex-col gap-12 px-5 pb-6 pt-32 text-brand-black"
    >
        <header>
            <h1 class="text-4xl uppercase tracking-tighter">My First Sample Post</h1>
            <p class="text-neutral-500 uppercase">Date Placeholder - 2024</p>
        </header>

        <section class="prose prose-neutral max-w-none prose-p:text-pretty prose-headings:uppercase prose-headings:font-normal">
            <h2>Section Heading</h2>
            <p>
                This is the content of the first sample blog post. It uses Tailwind's
                typography plugin for basic styling. You can write your content here
                using Markdown or standard HTML elements.
            </p>

            <div
                class="writing-image relative my-8 h-[clamp(144px,12vh,224px)] w-full overflow-hidden saturate-[0.25]"
                style="margin-left: auto; margin-right: auto;"
            >
                <Image
                    src={placeholderImage}
                    alt="Placeholder image for the blog post"
                    class="writing-main-image h-full w-full select-none object-none object-center"
                    width={placeholderImage.width}
                    height={placeholderImage.height}
                    widths={[300, 600, placeholderImage.width]}
                    sizes="(max-width: 600px) 300px, 600px"
                />
                {
                    [...Array(4)].map((_, i) => (
                        <Image
                            style={{ zIndex: i }}
                            src={placeholderImage}
                            alt="Placeholder image overlay"
                            class="pointer-events-none absolute inset-0 size-full select-none object-none object-center"
                            width={placeholderImage.width}
                            height={placeholderImage.height}
                            aria-hidden="true"
                            loading="lazy"
                            widths={[300, 600, placeholderImage.width]}
                            sizes="(max-width: 600px) 300px, 600px"
                        />
                    ))
                }
            </div>

            <p>
                More content can go here. Add more paragraphs, lists, or other
                elements as needed.
            </p>

             <blockquote>
                A blockquote example. Style might need adjustment based on the theme.
            </blockquote>

            <h3>Another Section</h3>
            <ul>
                <li>List item one</li>
                <li>List item two</li>
            </ul>

        </section>
    </article>
</Layout>

<style is:global>
    /* Basic prose styling, potentially enhance or adjust in global css */
    .prose {
         /* Add any custom prose styles here if needed */
    }
    .writing-image {
         /* Copied styling from .about-image, adjust if needed */
         /* Consider moving common image styles to a global scope */
    }
</style> 