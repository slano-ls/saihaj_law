<script>
    import MainBrain from "@/js/MainBrain";
    
    document.addEventListener("DOMContentLoaded", () => {
        try {
            // Create the brain visualization
            new MainBrain();
            console.log("Brain visualization initiated");
        } catch (error) {
            console.error("Error initializing brain visualization:", error);
        }
    });
</script>

<style>
    /* Ensure the canvas covers the full screen */
    canvas {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
    }
    
    /* Hide any DOM stats display */
    body > div:last-child {
        z-index: 20;
